{
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  // Hide a bunch of stuff
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.overviewRulerLanes": 3,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": false,
  // Show vertical bars at 80 and 100 chars
  "editor.rulers": [
    80,
    100
  ],
  "files.insertFinalNewline": true,
  "editor.renderFinalNewline": "off",
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "workbench.tree.indent": 20,
  // Colors
  "window.autoDetectColorScheme": false,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.colorCustomizations": {
    "scrollbar.shadow": "#ffffff00",
    "widget.shadow": "#ffffff00",
    "editorOverviewRuler.findMatchForeground": "#ffffff00",
    "editorOverviewRuler.rangeHighlightForeground": "#ffffff00",
    "editorOverviewRuler.selectionHighlightForeground": "#ffffff00",
    "editorOverviewRuler.wordHighlightForeground": "#ffffff00",
    "editorOverviewRuler.wordHighlightStrongForeground": "#ffffff00",
    "editorOverviewRuler.modifiedForeground": "#ffffff00",
    "editorOverviewRuler.addedForeground": "#ffffff00",
    "editorOverviewRuler.deletedForeground": "#ffffff00",
    "editorOverviewRuler.errorForeground": "#ffffff00",
    "editorOverviewRuler.warningForeground": "#ffffff00",
    "editorOverviewRuler.infoForeground": "#ffffff00",
    "editorOverviewRuler.bracketMatchForeground": "#ffffff00",
    "editorOverviewRuler.currentContentForeground": "#ffffff00",
    "editorOverviewRuler.incomingContentForeground": "#ffffff00",
    "editorOverviewRuler.commonContentForeground": "#ffffff00",
    "editorOverviewRuler.background": "#ffffff00",
    "editorOverviewRuler.border": "#ffffff00"
  },
  // Git
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // Python
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "diffEditor.ignoreTrimWhitespace": true
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "property.refValue": {
        "underline": true
      }
    }
  },

  // VIM
  "vim.useSystemClipboard": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "o",
        "p"
      ],
      "commands": [
        "workbench.files.action.focusFilesExplorer"
      ]
    },
    {
      "before": [
        "<leader",
        "o",
        "d"
      ],
      "commands": [
        "dockerContainers.focus"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "a"
      ],
      "commands": [
        "workbench.action.toggleActivityBarVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "b"
      ],
      "commands": [
        "workbench.action.toggleTabsVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "t"
      ],
      "commands": [
        "workbench.action.toggleTabsVisibility"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "w"
      ],
      "commands": [
        "workbench.action.openRecent"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "d"
      ],
      "commands": [
        "dockerContainers.focus"
      ]
    },
    {
      "before": [
        "<leader>",
        "s"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<leader>",
        "/"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "<C-i>"
      ],
      "commands": [
        "editor.debug.action.showDebugHover"
      ],
      "when": "editorTextFocus && inDebugMode"
    },
    {
      "before": [
        "<C-i>"
      ],
      "commands": [
        "editor.action.showHover"
      ],
      "when": "editorTextFocus"
    },
    {
      "before": [
        "<C-w>",
        "<C-s>"
      ],
      "after": [
        "<C-w>",
        "s"
      ]
    },
    {
      "before": [
        "<leader>",
        "."
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "commands": [
        "editor.action.formatDocument"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "p"
      ],
      "commands": [
        "editor.action.formatSelection"
      ]
    }
  ],
  // END of organized settings

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "bash (migrated)": {
      "path": "bash",
      "args": [
        "-l"
      ]
    }
  },
  "terminal.integrated.scrollback": 10000,
  "githubPullRequests.pullBranch": "never",
  "window.zoomLevel": 1,
  "[ruby]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "files.trimFinalNewlines": true,
    "editor.semanticHighlighting.enabled": true
  },
  "editor.lineNumbers": "on",
  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.queries": [
    {
      "label": "Local Pull Request Branches",
      "query": "default"
    },
    {
      "label": "Waiting For My Review",
      "query": "repo:${owner}/${repository} is:pr is:open user-review-requested:@me "
    },
    {
      "label": "Assigned To Me",
      "query": "repo:${owner}/${repository} is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "repo:${owner}/${repository} is:open author:${user}"
    },
    {
      "label": "All Open",
      "query": "default"
    }
  ],
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "githubPullRequests.fileListLayout": "tree",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "html.format.wrapAttributesIndentSize": 2,
  "html.format.extraLiners": "",
  "docker.extension.enableComposeLanguageServer": false,
  "dotfiles.repository": "callahanrts/vscode",
  "dotfiles.targetPath": "~/.config/vscode",
  "dotfiles.installCommand": "install",

  // Enable all hints
  "rubyLsp.featuresConfiguration.inlayHint.enableAll": true,
  // Enable implicit rescue (defaults to true)
  "rubyLsp.featuresConfiguration.inlayHint.implicitRescue": true,
  // Enable implicit hash values (omitted hash values)
  "rubyLsp.featuresConfiguration.inlayHint.implicitHashValue": true,

  // "terminal.integrated.shell.linux": "exec zsh"
  // "terminal.integrated.env.linux": {
  //   "ZSH_INIT_COMMAND": "eval zsh"
  // }
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": { "zsh": { "path": "/usr/bin/zsh" } }
}
